<!DOCTYPE html>
<html>
  <head>
    <title>SubTaskApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/64a2167754.js" crossorigin="anonymous"></script>

  </head>

  <body>
    <header>
      <div class="header-size">
        <nav class = "content-center navbar" >
          <%= form_tag(search_path,:method => 'get') do %>
            <%= text_field_tag :search %>
            <%= submit_tag '検索', :comment => nil %>
          <% end %>
            <% if user_signed_in? %>
              <%= link_to page_path(current_user.id), method: :get do %>
                <i class="fas fa-user fa-lg black"></i>
              <% end %>
              <%= link_to new_micropost_path, method: :get do %>
                <i class="far fa-plus-square fa-lg black"></i>
              <% end %>
              <%= link_to root_path, method: :get do %>
                <i class="fas fa-house-user fa-lg black"></i>
              <% end %>
              <% if unchecked_notifications.any? %>
                <%= link_to notifications_path, method: :get do %>
                    <i class = "fas fa-bell fa-lg "></i>
                <% end %>
              <% else %>
                <%= link_to notifications_path, method: :get do %>
                    <i class = "fas fa-bell fa-lg black"></i>
                <% end %>
              <% end %>

            <% else %>
              <%= link_to 'サインアップ', new_user_registration_path %>
              <%= link_to 'ログイン', new_user_session_path %>
            <% end %>
        </nav>
      </div>
    </header>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
