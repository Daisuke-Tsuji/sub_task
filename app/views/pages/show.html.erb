<h1><%= @user.user_name %></h1>
<p>ユーザー用ページです。</p>

<% if @user.avatar? %>
  <img src='<%= @_user.avatar  %>' class="icon_image" alt="ユーザーアイコン">
<% else %>
  <image src="/assets/default.jpg" class="icon_image" alt="ユーザーアイコン" %>
<% end %>

<%= link_to 'プロフィール変更', profile_edit_path %>

<p><%= "フォロー数: #{@user.follower.count}" %></p>
<p><%= "フォロワー数: #{@user.followed.count}" %></p>
<% unless @user == current_user %>
  <% if current_user.following?(@user) %>
    <%= link_to 'フォロー外す', unfollow_path(@user.id), method: :POST %>
  <% else %>
    <%= link_to 'フォローする', follow_path(@user.id), method: :POST %>
  <% end %>
<% end %>
<p></p>

<h3>フォロー一覧</h3>
  <% @user.following_user.where.not(id: current_user.id).each do |user| %>
    <p>
      <%= "id: #{user.id} name: #{user.user_name}" %>
      <% if current_user.following?(user) %>
        <%= link_to 'フォロー外す', unfollow_path(user.id), method: :POST %>
      <% else %>
        <%= link_to 'フォローする', follow_path(user.id), method: :POST %>
      <% end %>
      <%= link_to "show", page_path(user.id) %>
    </p>
  <% end %>
<h3>フォロワー一覧</h3>
  <% @user.follower_user.where.not(id: current_user.id).each do |user| %>
    <p>
      <%= "id: #{user.id} name: #{user.user_name}" %>
      <% if current_user.following?(user) %>
        <%= link_to 'フォロー外す', unfollow_path(user.id), method: :POST %>
      <% else %>
        <%= link_to 'フォローする', follow_path(user.id), method: :POST %>
      <% end %>
      <%= link_to "show", page_path(user.id) %>
    </p>
  <% end %>

<div class="col-md-8">
  <% if @user.microposts.any? %>
    <% @micropost.each do |micropost| %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render micropost %>
      </ol>

    <% end %>
  <% end %>
</div>

<h3>いいねしている投稿</h3>
<% @user.liked_posts.each do |post| %>
  <%= post.user.user_name %>
  <%= post.image %>
<% end %>
